<div class="col">
    <div class="card shadow-sm" data-id="<%= portfolio_item.id %>">
        <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb') %>
        <div class="card-body">
            <p class="card-text">
                <span>
                    <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %>
                    <%= portfolio_item.subtitle %>
                </span>
            </p>
        </div>
    </div>
</div>