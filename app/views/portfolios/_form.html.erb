<%= form_for(portfolio_item) do |f| %>
<div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
</div>

<div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
</div>

<div class="field">
    <%= f.label :body %>
    <%= f.text_field :body %>
</div>

<ul>
    <%= f.fields_for :technologies do |technology_f| %>
    <li>
        <%= technology_f.label :name %>
        <%= technology_f.text_field :name %>
    </li>
    <% end %>
</ul>

<div class="actions">
    <%= f.submit %>
</div>

<% end %>
