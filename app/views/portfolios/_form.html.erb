<%= form_for(portfolio_item) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :subtitle, class: 'form-label' %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <label class="btn btn-primary">
          Upload a main image file <%= f.file_field :main_image, style: 'display: none;' %>
        </label>
      </div>
      <div class="mb-3">
      <label class="btn btn-primary">
          Upload a thumb image file <%= f.file_field :thumb_image, style: 'display: none;' %>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :body, class: 'form-label' %>
        <%= f.text_area :body, class: 'form-control', rows: '15' %>
      </div>
    </div>
  </div>
  <hr>
  <div class="col-md-12">
    <h2>Technologies used:</h2>
    <div>
      <%= f.fields_for :technologies do |technology_f| %>
        <div class="mb-3">
          <%= technology_f.label :name, class: 'form-label' %>
          <%= technology_f.text_field :name, class: 'form-control' %>
        </div>
      <% end %>
    </div>
    <div class="d-grid">
      <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
